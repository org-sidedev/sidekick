; Function declarations (including React components)
(
  (function_declaration
    name: (identifier) @name
  )
  (#eq? @name "{{SymbolName}}")
) @definition

; Arrow function components with type annotation
(
  (variable_declaration
    (variable_declarator
      name: (identifier) @name
      value: (arrow_function
        type_parameters: (type_parameters)?
        parameters: (formal_parameters)
        return_type: (type_annotation)?
      )
    )
  )
  (#eq? @name "{{SymbolName}}")
) @definition

; Class components
(
  (class_declaration
    name: (_) @name
  )
  (#eq? @name "{{SymbolName}}")
) @definition

; Interface declarations (for props and state)
(
  (interface_declaration
    name: (type_identifier) @name
  )
  (#eq? @name "{{SymbolName}}")
) @definition

; Type alias declarations
(
  (type_alias_declaration
    name: (type_identifier) @name
  )
  (#eq? @name "{{SymbolName}}")
) @definition

; Function calls (including hooks)
(
  (call_expression
    function: (identifier) @name
  )
  (#eq? @name "{{SymbolName}}")
) @definition

; Variable declarations (const components, hooks)
(
  (variable_declaration
    (variable_declarator
      name: (identifier) @name
    )
  )
  (#eq? @name "{{SymbolName}}")
) @definition

; Let/const declarations
(
  (lexical_declaration
    (variable_declarator
      name: (identifier) @name
    )
  )
  (#eq? @name "{{SymbolName}}")
) @definition

; Class methods
(
  (method_definition
    name: (_) @name
  )
  (#eq? @name "{{SymbolName}}")
) @definition

; Interface methods
(
  (interface_declaration
    body: (_
      (method_signature
        name: (_) @name
      )
    )
  )
  (#eq? @name "{{SymbolName}}")
) @definition

