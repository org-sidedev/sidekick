    "version": "0.2.0",
    "configurations": [
        {
            "name": "Replay Flow",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/worker/replay/replay.go",
            "args": [
                "-id",
                "'replace this with your flow id (in .vscode/launch.json)'"
            ],
            "env": {
                "TEMPORAL_DEBUG": "true",
                "SIDE_LOG_LEVEL": "0",
            },
        },
    ]
}